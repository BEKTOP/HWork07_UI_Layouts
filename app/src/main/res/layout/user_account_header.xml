<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingLeft="12dp"
        android:text="@string/text_user_name"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/user_name"
        android:rotation="180"
        android:src="@drawable/triangle"/>

    <ImageView
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/account_plus"
        android:src="@drawable/history"/>

    <ImageView

        android:id="@+id/account_plus"
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/more_vert"
        android:src="@drawable/account_plus"/>

    <ImageView
        android:id="@+id/more_vert"
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:src="@drawable/dots_vertical"/>


</RelativeLayout>