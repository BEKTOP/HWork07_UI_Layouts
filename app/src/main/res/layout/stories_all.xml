<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:text="@string/text_stories"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:rotation="180"
                android:src="@drawable/triangle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/text_watch_all"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_1"
                style="@style/cards_style"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/image_card_1"
                    style="@style/cards_image_style"
                    android:src="@drawable/image01">
                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                style="@style/cards_text_style"
                android:text="@string/text_username1"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_2"
                style="@style/cards_style"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_2"
                    style="@style/cards_image_style"
                    android:src="@drawable/image03">

                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                style="@style/cards_text_style"
                android:text="@string/text_username2"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/cards_style"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_3"
                    style="@style/cards_image_style"
                    android:src="@drawable/image04">

                </ImageView>

            </android.support.v7.widget.CardView>


            <TextView
                style="@style/cards_text_style"
                android:text="@string/text_username3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/cards_style"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/image_card_4"
                    style="@style/cards_image_style"
                    android:src="@drawable/image02">

                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                style="@style/cards_text_style"
                android:text="@string/text_username4"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>