<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:innerRadius="1dp"
        android:shape="ring"
        android:thicknessRatio="2"
        app:cardCornerRadius="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView

            android:id="@+id/image_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image01"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop">

        </ImageView>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Info_page_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_posts"/>

                <TextView
                    style="@style/Info_page_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/text_posts"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Info_page_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_followers"/>

                <TextView
                    style="@style/Info_page_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/text_followers"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Info_page_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nunber_following"/>

                <TextView
                    style="@style/Info_page_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/text_following"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/avatar"
        android:background="@color/colorGray"
        android:gravity="center"
        android:text="Edit your profile"
        android:textSize="12sp"
        />

</RelativeLayout>