<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    android:layout_margin="4dp"
    >

    <ImageView
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_weight="1"
        android:tint="@color/colorPrimaryDark"
        android:src="@drawable/apps"/>

    <ImageView
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_weight="1"
        android:src="@drawable/format_list_bulleted"
        android:tint="@color/colorGray2"/>

    <ImageView
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_weight="1"
        android:src="@drawable/account_location"
        android:tint="@color/colorGray2"/>

    <ImageView
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_weight="1"
        android:src="@drawable/bookmark_outline"
        android:tint="@color/colorGray2"/>

</LinearLayout>