<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingLeft="12dp"
        android:text="@string/text_user_name"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/user_name"
        android:layout_toRightOf="@+id/user_name"
        android:rotation="180"
        android:src="@drawable/triangle"/>

    <ImageView
        style="@style/small_header_button_styly"
        android:layout_toLeftOf="@+id/account_plus"
        android:src="@drawable/history"/>

    <ImageView
        android:id="@+id/account_plus"
        style="@style/small_header_button_styly"
        android:layout_toLeftOf="@+id/more_vert"
        android:src="@drawable/account_plus"/>

    <ImageView
        style="@style/small_header_button_styly"
        android:id="@+id/more_vert"
         android:layout_alignParentRight="true"
        android:src="@drawable/dots_vertical"/>

</RelativeLayout>