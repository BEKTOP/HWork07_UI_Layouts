<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:text="Stories"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:baselineAlignBottom="true"
                android:rotation="180"
                android:src="@drawable/triangle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Watch all"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:innerRadius="1dp"
                android:shape="ring"
                android:thicknessRatio="2"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image01"
                    >
                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp"
                android:text="UserName1"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:innerRadius="1dp"
                android:shape="ring"
                android:thicknessRatio="2"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image03"
                    >
                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp"
                android:text="UserName2"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:innerRadius="1dp"
                android:shape="ring"
                android:thicknessRatio="2"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image04"
                    >
                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp"
                android:text="UserName3"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:innerRadius="1dp"
                android:shape="ring"
                android:thicknessRatio="2"
                app:cardCornerRadius="30dp">

                <ImageView

                    android:id="@+id/image_card_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image02"
                    >
                </ImageView>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp"
                android:text="UserName4"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>